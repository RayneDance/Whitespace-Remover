{
	"name": "Freedoms Whitespace Remover",
	"version": "1.1.0",
	"description": "Trims copied text and optionally removes non-printing characters.",
	"manifest_version": 2,
	
	
	"browser_action":{
		"default_popup": "popup.html"
	},
	
	"permissions": [ 
		"activeTab",
		"clipboardWrite",
		"clipboardRead",
		"storage"
	],
	
	"content_scripts":[
		{
		"matches": ["<all_urls>"],
		"js": ["trim_whitespace.js"]
		}
	]
}

